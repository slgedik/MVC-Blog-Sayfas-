@model IEnumerable<WebApplication2.Models.CategoryModel>

@{
    ViewBag.Title = "Index";
}

<h2>Kategori Listesi</h2>

<p>
    @Html.ActionLink("Yeni Kategori", "Create",null,new {@class="btn btn-primary" })
</p>
<hr/>

@if(TempData["Kategori"] != null)
{
    var kategori = (WebApplication2.Models.Category)TempData["Kategori"];

    <div class="alert alert-success"  role="alert">
        <span class="glyphicon glyphicon-ok"/>
        <b> @kategori.KategoriAdi</b> Kayıt Edildi.
    </div> 
}
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th style="width:70%">
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th style="width:13%">
            @Html.DisplayNameFor(model=> model.BlogSayisi)
        </th>
        <th style="width:200px"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.KategoriAdi
        </td>

        <td>
            @item.BlogSayisi
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id },new {@class="btn btn-warning btn-xs" }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-primary btn-xs" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
